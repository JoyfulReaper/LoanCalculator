@{
    ViewData["Title"] = "Loan Calculator: Home";
}

<!-- Main Section -->

    <div class="container">
        <div class="row g-5 py-1 order-last order-sm-first">
            <!-- Logo Section -->
            <div class="col-12 col-sm-6 d-flex align-content-center">
                <img src="~/img/loanshark.webp" class="img-fluid center-block d-block mx-auto" alt="Loan Calculator Logo" height="300" style="max-height: 300px;">
            </div>

            <div class="col-12 col-sm-6 order-last order-lg-first">
                <h1 class="display-5 fw-bold lh-1 mb-3 logoFont">Loan Calculator: A Coding Project</h1>
                <h4 class="lead">
                    A C# ASP.NET MVC application that generates an amorization schedule for a simple interest loan.
                </h4>
                <ul class="fa-ul pt-2 checklist">
                    <li><span class="fa-li"><i class="fas fa-check-square"></i></span>CSS and Bootstrap Layout</li>
                    <li><span class="fa-li"><i class="fas fa-check-square"></i></span>C# Fundementals</li>
                    <li><span class="fa-li"><i class="fas fa-check-square"></i></span>C# Loops</li>
                    <li><span class="fa-li"><i class="fas fa-check-square"></i></span>C# Objects</li>
                    <li><span class="fa-li"><i class="fas fa-check-square"></i></span>C# Methods</li>
                </ul>
                <div>
                    <a type="button" class="btn btn-outline-dark btn-lg px-4 me-md-2" asp-area="" asp-controller="Home" asp-action="LoanCalculator">Try It Out</a>
                </div>
                <h5 class="fw-bold mt-5">
                    <div class="d-flex">
                        <div class="row">
                            <div class="col"><i class="fab fa-bootstrap fa-3x bsicon"></i></div>
                            <div class="col"><i class="fab fa-html5 fa-3x html5icon"></i></div>
                            <div class="col"><i class="fab fa-css3-alt fa-3x cssicon"></i></div>
                        </div>
                    </div>
                </h5>
            </div>
        </div>
    </div>
